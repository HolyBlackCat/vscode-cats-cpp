{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },

    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],

    "autoClosingPairs": [
        {"open":"{",  "close":"}" , "notIn": ["string", "comment"]},
        {"open":"[",  "close":"]" , "notIn": ["string", "comment"]},
        {"open":"(",  "close":")" , "notIn": ["string", "comment"]},
        {"open":"\"", "close":"\"", "notIn": ["string"]},
        {"open":"'",  "close":"'" , "notIn": ["string"]}
    ],

    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],

    "folding": {
        "markers": {
			"start": "^\\s*//\\s*{[^}]*$",
			"end": "^\\s*//\\s*}[^{]*$"
        }
    }
}
